extend base
block content
    include nav
    .main.container
        .row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Login

            // register form
            form.signup-Page
                div.form-group
                    label(for='email') Email:
                    input#emails.form-control(type='email', placeholder='name@email.com' name='email')
                div.form-group
                    label(for='pw') Password:
                    input#pws.form-control(type='password' name='password')
                div.form-group
                    label(for='cp') Confirm Password:
                    input#cp.form-control(type='password' name='password')
                button.btn.btn-primary(type='submit') Sign up